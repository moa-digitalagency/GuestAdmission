modules = ["python-3.11", "nodejs-20", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cacert", "freetype", "glibcLocales", "openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_ENV=development bash start.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39365
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["bash", "start.sh"]
build = ["python", "init_database.py"]
